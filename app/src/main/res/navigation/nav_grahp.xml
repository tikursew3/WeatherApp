<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grahp"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.weatherapp.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_currentConditionsFragment"
            app:destination="@id/currentConditionsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/currentConditionsFragment"
        android:name="com.example.weatherapp.CurrentCondition.CurrentConditionsFragment"
        android:label="CurrentConditionsFragment">
        <argument
            android:name="currentConditions"
            app:argType="com.example.weatherapp.model.CurrentConditions"/>
        <action
            android:id="@+id/action_currentConditionsFragment_to_forecastFragment"
            app:destination="@id/forecastFragment" />


    </fragment>
    <fragment
        android:id="@+id/forecastFragment"
        android:name="com.example.weatherapp.forecast.ForecastFragment"
        android:label="ForecastFragment">
        <argument
            android:name="coordinates"
            app:argType="com.example.weatherapp.model.Coordinates"
            />

    </fragment>

</navigation>